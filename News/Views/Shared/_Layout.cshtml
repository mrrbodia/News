<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/materialize/css/materialize.min.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <noscript><h3 class="error-massage">Увімкніть js</h3></noscript>

    <header id="header">
        <div class="main-menu dark">
	        <div class="row">
		        <div class="grid_2 grid_btn icon-tab">
			        <a href="@Url.RouteUrl("Home")" rel="tooltip" title="" data-placement="right" class="logo icon tip" data-original-title="Home">
                        <img class="icon" src="~/Content/images/icon.png" />
                        News
			        </a>
			        <a class="spring show-phone"></a>
		        </div><!-- 2 -->
		        <div class="grid_2 right hide-phone grid_btn">
			        <ul id="main-menu" class="menu-side">
                         @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li id="menu-item-309" class="menu-item menu-item-type-post_type_archive menu-item-object-about menu-item-309">
                                    <a href="@Url.RouteUrl("ShowXml")">XML</a>
                                </li>
                            }
                            <li id="menu-item-309" class="menu-item menu-item-type-post_type_archive menu-item-object-about menu-item-309">
                                @User.Identity.Name
                            </li>
                             <li id="menu-item-309" class="menu-item menu-item-type-post_type_archive menu-item-object-about menu-item-309">
                                @Html.RouteLink("Вийти", "LogOut", null)
                            </li>
                         }
                        else
                        {
                        <li id="menu-item-311" class="menu-item menu-item-type-post_type_archive menu-item-object-design menu-item-311">
                            @Html.RouteLink("Увійти", "logIn", null)
                        </li>
                        }
                    </ul>

		        </div><!-- 10 -->
	        </div><!-- Row -->
        </div>
    </header>
    <div id="content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/materialize/materialize.min.js")
    @Scripts.Render("~/Scripts/News.js")
    @RenderSection("scripts", required: false)
</body>
</html>
