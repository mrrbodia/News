<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <noscript><h3 class="error-massage">Увімкніть js</h3></noscript>

    <header>
        <nav style="width: 100%; height: 50px; margin: 0; background-color: whitesmoke">
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    @User.Identity.Name
                </div>
                <div>@Html.RouteLink("Вийти", "LogOut", null)</div>
            }
            else
            {
                <div>@Html.RouteLink("Увійти", "logIn", null)</div>
            }

        </nav>
    </header>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
