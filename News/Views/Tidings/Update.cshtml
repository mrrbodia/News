@model News.Business.ViewModels.TidingsViewModel
@using Resources
@{
    ViewBag.Title = "Update";
}
@using (Html.BeginForm("Update", "Tidings", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AuthorId)
    <div id="wrapper">
        <div>
            @Html.LabelFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "text-danger" })
        </div>
        <div class="buttons">
             <button class="btn waves-effect cyan waves-light btn-right" type="submit">@Resources.Resource.update</button>
             <button class="btn red darken-3 waves-effect waves-light btn-right">@Resources.Resource.decline</button>
        </div>
    </div>
}

