@model News.Business.ViewModels.TidingsViewModel

@{
    ViewBag.Title = "Update";
}
@using (Html.BeginForm("Update", "Tidings", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AuthorId)

        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.EditorFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "text-danger" })
        </div>
        <div>
            <button class="btn waves-effect waves-light" type="submit">Редагувати</button>
            <button class="btn red darken-3 waves-effect waves-light">Відмінити</button>
        </div>
}

