@model News.Business.ViewModels.TidingsViewModel

@{
    ViewBag.Title = "Update";
}
@using (Html.BeginForm("Update", "Tidings", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AuthorId)

        <div>
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.EditorFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "text-danger" })
        </div>
        <div>
            <input type="submit" value="Редагувати" />
            <input class="update-cancel" type="button" value="Вiдмінити" />
        </div>
}

